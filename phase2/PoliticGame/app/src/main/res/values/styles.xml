<resources>

    <!-- Blue application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backColor">@color/backgroundBlue</item>
        <item name="textColor">@color/textWhite</item>
    </style>


    <!-- Red application theme. -->
    <style name="RedTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backColor">@color/backgroundRed</item>
        <item name="textColor">@color/textWhite</item>
    </style>
</resources>
